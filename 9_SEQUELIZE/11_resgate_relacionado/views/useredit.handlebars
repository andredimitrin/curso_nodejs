<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="POST" class="form">
  <!-- Campo de entrada oculto para passar o ID -->
  <input type="hidden" name="id" value="{{user.id}}">
  
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" id="name" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" id="occupation" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form-checkbox">
    <input type="checkbox" id="newsletter" name="newsletter" {{#if user.newsletter}} checked {{/if}}>
    <label for="newsletter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Editar">
</form>
<div class="address-container">
  <h2>Endereços:</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" id="street" name="street" placeholder="Digite o nome da rua">
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" id="city" name="city" placeholder="Digite o nome da Cidade">
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" id="number" name="number" placeholder="Digite o número">
    </div>
    <input type="submit" value="Incluir Endereço">
  </form>
  <div class="address-list">
    <h2>Lista de Endereços</h2>
    {{#if user.Addresses}}
      {{#each user.Addresses}}
      <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
    {{/each}}
    {{else}}
      <p>Nenhum endereço cadastrado.</p>
    {{/if}}
  </div>
</div>
