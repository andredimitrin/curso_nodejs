<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="action">
            <a href="/users/{{this.id}}" class="btn-details">Ver detalhes</a>
            <form action="/users/delete/{{this.id}}" method="POST">
                <input type="submit" value="Remover" class="btn-delete">
            </form>
        </div>
    </div>
    {{/each}}
</div>
